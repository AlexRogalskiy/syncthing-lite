<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ASync.Base" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:listViewStyle">@style/Widget.ASync.ListView</item>
        <item name="drawerArrowStyle">@style/Widget.ASync.DrawerArrowToggle</item>
    </style>
    <style name="Theme.ASync" parent="Theme.ASync.Base"/>
    <style name="Theme.ASync.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary_dark</item>
    </style>
</resources>
